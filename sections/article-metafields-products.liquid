{%- assign metafields-products = article.metafields.related.product -%}

{%-  if metafields-products != blank -%}
  <section class="page-width element-margin-top">
    {%- if section.settings.heading != blank -%}
      <h2 class="title {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}
    <ul class="list-unstyled">
    {%- for product in metafields-products.value  -%}
       
          <li class="metafields-product">
            <a href="{{store.url}}{{ product.url }}">
              <figure class="metafields-product_img">
                <img src="{{ product.featured_image | img_url}} "  alt="{{ product.featured_image }}">
              </figure>
                <span>{{ product.title }}</span>
            </a>
          </li>
          
    {%- endfor -%}

    <style>
      
      .list-unstyled {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        background: green;
      }
      .metafields-product {
        background: pink;
        width: 48%;
        margin: 10px auto;
        padding:0;
      }
      .metafields-product a {
      }

      .metafields-product_img {
        padding:0;
        margin: 0;
      }
      .metafields-product_img img {
        width: 100%;
      }
      span {
        background: red;
      }

    </style>
    </ul>
  </section>
{%- endif -%}

{% schema %}
  {
    "name": "関連商品（メタフィールド）",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "セクションタイトル",
        "default": "こちらのページでご紹介した商品"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
          },
          {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
          },
          {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
          }
        ],
        "default": "h2",
        "label": "t:sections.all.heading_size.label"
      }
    ],
    "presets" : [
      {
        "name" : "関連商品（メタフィールド設定）"
      }
    ],
    "templates" : [
      "article"
    ]
  }
{% endschema %}
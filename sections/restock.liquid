<button id="notify-button">Notify Me</button>
<div id="notify-form" style="display: none;">
  <h3>Notify Me When Available</h3>
  <form id="notify-form" action="/notify" method="POST">
    <input type="hidden" name="product_id" value="{{ product.id }}" />
    <input type="email" name="email" placeholder="Your email" required />
    <input type="submit" value="Submit" />
  </form>
</div>

<script>
document.getElementById('notify-button').addEventListener('click', function() {
  document.getElementById('notify-form').style.display = 'block';
});
</script>